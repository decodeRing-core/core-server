[Unit]
Description=decodeRing Server (dcdr-server)
Documentation=man:dcdr-server(8)
After=network.target

[Service]
Type=simple
ExecStart=/usr/sbin/dcdr-server --config /etc/dcdr/server.cfg
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5s

# Security hardening
User=root
Group=root
NoNewPrivileges=yes
PrivateTmp=yes
ProtectSystem=full
ProtectHome=yes
ReadWritePaths=/var/log/dcdr
ConfigurationDirectory=dcdr

[Install]
WantedBy=multi-user.target
